<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".LicenseActivity">

  <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:paddingTop="10dp"
       android:layout_marginLeft="60dp"
       android:layout_marginRight="75dp"
       android:background="@drawable/corner_radius">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="85dp">

      <ImageView
          android:id="@+id/phflag"
          android:layout_width="110dp"
          android:layout_height="170dp"
          android:layout_alignParentLeft="true"
          android:layout_marginLeft="20dp"
          android:layout_alignParentTop="true"
          app:srcCompat="@drawable/philflag"/>

      <TextView
          android:id="@+id/rep"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:text="REPUBLIC OF THE PHILIPPINES"
          android:textSize="17sp"
          android:textColor="@color/black"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/dep"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/rep"
          android:layout_centerHorizontal="true"
          android:text="DEPARTMENT OF TRANSPORTATION"
          android:textSize="15sp"
          android:textStyle="normal"
          android:textColor="@color/black"/>

      <TextView
          android:id="@+id/land"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/dep"
          android:layout_centerHorizontal="true"
          android:text="LAND TRANSPORTATION OFFICE"
          android:textSize="15sp"
          android:textStyle="normal"
          android:textColor="@color/black"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/land"
          android:layout_centerHorizontal="true"
          android:text="NON-PROFESSIONAL DRIVER'S LICENSE"
          android:textSize="20sp"
          android:textStyle="bold"
          android:textColor="@color/black"/>

      <ImageView
          android:id="@+id/lto"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_marginRight="30dp"
          android:layout_marginTop="7dp"
          android:layout_alignParentRight="true"
          app:srcCompat="@drawable/ltopng" />

    </RelativeLayout>

      <RelativeLayout
          android:id="@+id/leftContainer"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="15dp"
          android:layout_width="170dp"
          android:layout_height="match_parent"
          android:layout_below="@id/header">

        <ImageView
            android:id="@+id/PicContainer"
            android:layout_width="135dp"
            android:layout_height="190dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PicContainer"
            android:background="@color/white"
            android:layout_marginLeft="19dp"
            android:paddingTop="30dp"
            android:gravity="center"
            android:text="SIGNATURE OF LICENSE"
            android:textSize="10sp"
            android:textStyle="normal"
            android:textColor="@color/black"/>

      </RelativeLayout>

    <RelativeLayout
        android:layout_width="440dp"
        android:layout_height="270dp"
        android:layout_below="@id/header"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/leftContainer">

      <TextView
          android:id="@+id/nameLabel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:text="Lastname                      Firstname                     Middle Name"
          android:textSize="9sp"
          android:textStyle="normal"
          android:textColor="@color/black"/>

      <TextView
          android:id="@+id/lnameContainer"
          android:layout_width="100dp"
          android:layout_height="40dp"
          android:layout_below="@+id/nameLabel"
          android:layout_alignParentLeft="true"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="12sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/fnameContainer"
          android:layout_width="100dp"
          android:layout_height="40dp"
          android:layout_below="@+id/nameLabel"
          android:layout_toRightOf="@id/lnameContainer"
          android:layout_marginLeft="2dp"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="12sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/mnameContainer"
          android:layout_width="90dp"
          android:layout_height="40dp"
          android:layout_below="@+id/nameLabel"
          android:layout_toRightOf="@id/fnameContainer"
          android:layout_marginLeft="4dp"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="12sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/infoLabel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/lnameContainer"
          android:layout_marginTop="3dp"
          android:text="Nationality          SEX            Date of Birth            Weight(kg)            Height(cm)"
          android:textSize="9sp"
          android:textStyle="normal"
          android:textColor="@color/black"/>

      <TextView
          android:id="@+id/nationalityContainer"
          android:layout_width="45dp"
          android:layout_height="35dp"
          android:layout_below="@+id/infoLabel"
          android:layout_marginTop="-1dp"
          android:layout_alignParentLeft="true"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textAlignment="center"
          android:fontFamily="sans-serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/sexContainer"
          android:layout_width="40dp"
          android:layout_height="35dp"
          android:layout_below="@+id/infoLabel"
          android:layout_toRightOf="@id/nationalityContainer"
          android:layout_marginLeft="22dp"
          android:textAlignment="center"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/bdayContainer"
          android:layout_width="65dp"
          android:layout_height="35dp"
          android:layout_below="@+id/infoLabel"
          android:layout_toRightOf="@id/sexContainer"
          android:layout_marginLeft="15dp"
          android:textAlignment="center"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/weightContainer"
          android:layout_width="55dp"
          android:layout_height="35dp"
          android:layout_below="@+id/infoLabel"
          android:layout_toRightOf="@id/bdayContainer"
          android:layout_marginLeft="25dp"
          android:textAlignment="center"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/heightContainer"
          android:layout_width="50dp"
          android:layout_height="35dp"
          android:layout_below="@+id/infoLabel"
          android:layout_toRightOf="@id/weightContainer"
          android:layout_marginLeft="25dp"
          android:textAlignment="center"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/addressLabel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/nationalityContainer"
          android:layout_marginTop="3dp"
          android:text="BRGY.                                    MUNICIPALITY                          CITY                    PROVINCE"
          android:textSize="9sp"
          android:textStyle="normal"
          android:textColor="@color/black"/>

      <TextView
          android:id="@+id/brgyContainer"
          android:layout_width="110dp"
          android:layout_height="35dp"
          android:layout_below="@+id/addressLabel"
          android:layout_alignParentLeft="true"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/munContainer"
          android:layout_width="95dp"
          android:layout_height="35dp"
          android:layout_below="@+id/addressLabel"
          android:layout_toRightOf="@id/brgyContainer"
          android:layout_marginLeft="9dp"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/cityContainer"
          android:layout_width="110dp"
          android:layout_height="35dp"
          android:layout_below="@+id/addressLabel"
          android:layout_toRightOf="@+id/munContainer"
          android:layout_marginLeft="4dp"
          android:textAlignment="center"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/provContainer"
          android:layout_width="85dp"
          android:layout_height="35dp"
          android:layout_below="@+id/addressLabel"
          android:layout_toRightOf="@+id/cityContainer"
          android:layout_marginLeft="2dp"
          android:textAlignment="center"
          android:padding="5dp"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:fontFamily="sans-serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/idInfoLabel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/brgyContainer"
          android:layout_marginTop="3dp"
          android:text="License No.                         Expiration Date                 Agency Code            Restrictions          "
          android:textSize="9sp"
          android:textStyle="normal"
          android:textColor="@color/black"/>


      <TextView
          android:id="@+id/licenseContainer"
          android:layout_width="100dp"
          android:layout_height="30dp"
          android:layout_below="@+id/idInfoLabel"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="11sp" />

      <TextView
          android:id="@+id/expireContainer"
          android:layout_width="90dp"
          android:layout_height="30dp"
          android:layout_below="@+id/idInfoLabel"
          android:layout_toRightOf="@id/licenseContainer"
          android:layout_marginLeft="10dp"
          android:textAlignment="center"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/agencyContainer"
          android:layout_width="40dp"
          android:layout_height="30dp"
          android:layout_below="@+id/idInfoLabel"
          android:layout_toRightOf="@id/expireContainer"
          android:layout_marginLeft="40dp"
          android:textAlignment="center"
          android:padding="5dp"
          android:text=" C30"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/restrictContainer"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_below="@+id/idInfoLabel"
          android:layout_toRightOf="@id/agencyContainer"
          android:layout_marginLeft="55dp"
          android:padding="5dp"
          android:text="1,2"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/idInfoLabel2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/licenseContainer"
          android:layout_marginTop="3dp"
          android:text="Blood Type                Eyes Color               Condition         "
          android:textSize="9sp"
          android:textStyle="normal"
          android:textColor="@color/black"/>

      <TextView
          android:id="@+id/bloodtypeContainer"
          android:layout_width="50dp"
          android:layout_height="30dp"
          android:layout_below="@+id/idInfoLabel2"
          android:gravity="center_horizontal"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="11sp" />

      <TextView
          android:id="@+id/eyesContainer"
          android:layout_width="70dp"
          android:layout_height="30dp"
          android:layout_below="@+id/idInfoLabel2"
          android:layout_toRightOf="@id/bloodtypeContainer"
          android:layout_marginLeft="30dp"
          android:textAlignment="center"
          android:padding="5dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

      <TextView
          android:id="@+id/conditionContainer"
          android:layout_width="60dp"
          android:layout_height="30dp"
          android:layout_below="@+id/idInfoLabel2"
          android:layout_toRightOf="@id/eyesContainer"
          android:layout_marginLeft="16dp"
          android:textAlignment="center"
          android:padding="5dp"
          android:text="NONE"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
          android:textSize="11sp"
          tools:ignore="InvalidId" />

    </RelativeLayout>

  </RelativeLayout>

</RelativeLayout>